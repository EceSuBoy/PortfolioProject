@model MyPortfolioEce.DAL.Entities.Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Contacts</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Contacts</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            You can manage Contacts from the panel down below.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Phone 1</th>
                                    <th scope="col">Phone 2</th>
                                    <th scope="col">Email 1</th>
                                    <th scope="col">Email 2</th>
                                    <th scope="col">Address</th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.ContactId</td>
                                    <td>@Model.Title</td>
                                    <td>@Model.Description</td>
                                    <td>@Model.Phone1</td>
                                    <td>@Model.Phone2</td>
                                    <td>@Model.Email1</td>
                                    <td>@Model.Email2</td>
                                    <td>@Model.Adress</td>
                                    <td><a href="/Contacts/UpdateContact/@Model.ContactId" class="btn btn-success">Update</a></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



