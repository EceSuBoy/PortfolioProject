@model Contact

@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Contacts</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Updating Contacts Page</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            You can manage Contacts from the panel down below.
                        </div>

                        <form method="post">
                            <input type="hidden" asp-for="ContactId" />

                            <label>Title</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />

                            <label>Description</label>
                            <input type="text" asp-for="Description" class="form-control" />
                            <br />
                            
                            <label>Phone 1</label>
                            <input type="text" asp-for="Phone1" class="form-control" />
                            <br />

                            <label>Phone 2</label>
                            <input type="text" asp-for="Phone2" class="form-control" />
                            <br />

                            <label>Email 1</label>
                            <input type="text" asp-for="Email1" class="form-control" />
                            <br />

                            <label>Email 2</label>
                            <input type="text" asp-for="Email2" class="form-control" />
                            <br />

                            <label>Address</label>
                            <input type="text" asp-for="Adress" class="form-control" />
                            <br />

                            <button class="btn btn-warning">Update Contacts</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

