@model MyPortfolioEce.Models.AdminSettingsViewModel
@{
    ViewData["Title"] = "Settings";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Settings</h4>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success">@ViewBag.Message</div>
        }

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Edit Your Admin Information</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            You can update your name, password, and profile files below.
                        </div>

                        <form asp-action="Settings" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Surname"></label>
                                <input asp-for="Surname" class="form-control" />
                                <span asp-validation-for="Surname" class="text-danger"></span>
                            </div>

                            <hr />

                            <div class="form-group">
                                <label asp-for="CurrentPassword">Current Password</label>
                                <input asp-for="CurrentPassword" type="password" class="form-control" />
                                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="NewPassword">New Password</label>
                                <input asp-for="NewPassword" type="password" class="form-control" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ConfirmPassword">Confirm New Password</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <hr />

                            <div class="form-group">
                                <label asp-for="ProfileImage">Profile Picture</label>
                                <input asp-for="ProfileImage" type="file" class="form-control" />
                                <span asp-validation-for="ProfileImage" class="text-danger"></span>

                                @if (!string.IsNullOrEmpty(Model.ExistingProfileImagePath))
                                {
                                    <div class="mt-2">
                                        <img src="@Model.ExistingProfileImagePath" alt="Current Profile" width="100" />
                                    </div>
                                }
                            </div>

                            <div class="form-group">
                                <label asp-for="CvFile">CV File</label>
                                <input asp-for="CvFile" type="file" class="form-control" />
                                <span asp-validation-for="CvFile" class="text-danger"></span>

                                @if (!string.IsNullOrEmpty(Model.ExistingCvPath))
                                {
                                    <div class="mt-2">
                                        <p>Current CV: <a href="@Model.ExistingCvPath" target="_blank">Download</a></p>
                                    </div>
                                }
                            </div>

                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>  