@model ToDoList

@{
    ViewData["Title"] = "CreateToDoList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">To Do List</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">New Event</div>
                    </div>
                    <div class="card-body">

                        <form method="post">
                            <label>Title</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />

                            <label>Date</label>
                            <input type="date" asp-for="Date" class="form-control" />
                            <br />

                            <label>Image</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                            <br />

                            <button class="btn btn-primary">Add New Event</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



