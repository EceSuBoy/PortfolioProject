@functions {
	public string IsActive(params string[] paths)
	{
		var currentPath = Context.Request.Path.ToString().ToLower();
		foreach (var path in paths)
		{
			if (currentPath.StartsWith(path.ToLower()))
				return "active";
		}
		return "";
	}
}
